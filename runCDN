#!/bin/bash
username= keyfile=

# list of hosts
HOSTS=$(cat ./hosts.txt |tr "\n" " ")

# parse command line arguments
while getopts "u:i:p::o::n::" opt; do
  case $opt in
  u)
      username=$OPTARG
      ;;
  i)
      keyfile=$OPTARG
      ;;
  esac
done

# Start HTTP replica servers
for host in $HOSTS
do
  ssh -i ${keyfile} ${username}@${host} "bash -s" -- < ./scripts/http/run "$@"
done

ssh -i ${keyfile} ${username}@cs5700cdnproject.ccs.neu.edu "bash -s" -- < ./scripts/dns/run "$@"