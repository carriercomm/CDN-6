#!/bin/bash
port=  origin=  name= username= keyfile=

while getopts "u:i:n:" opt; do
  case $opt in
  p)
      port=$OPTARG
      ;;
  o)
      origin=$OPTARG
      ;;
  n)
      name=$OPTARG
      ;;
  u)
      username=$OPTARG
      ;;
  i)
      keyfile=$OPTARG
      ;;
  esac
done

shift $((OPTIND - 1))

echo "$keyfile"
echo "$username"
echo "$name"

ssh -i ${keyfile} ${username}@${name} "bash -s" -- < ./scripts/deploy