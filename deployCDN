#!/bin/bash
username= keyfile=

# list of hosts
HOSTS=$(cat ./hosts.txt |tr "\n" " ")

while getopts "u:i:" opt; do
  case $opt in
  u)
      username=$OPTARG
      ;;
  i)
      keyfile=$OPTARG
      ;;
  esac
done

# Deploy HTTP replica servers
for host in $HOSTS
do
  ssh -i ${keyfile} ${username}@${host} "bash -s" -- < ./scripts/http/deploy
done

